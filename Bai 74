        {
            Insert();
            Console.ReadKey();
        }

        static void Insert()
        {
            string constr;
            constr = @"Data Source=DESKTOP-GP8F496;Initial Catalog=Demodb;User ID=sa;Password=24518300";

            using (SqlConnection conn = new SqlConnection(constr))
            {
                conn.Open();

                string sql = "insert into demo values(3, 'Python')";
